@model my.ns.client.Models.SendCodeViewModel
@using i18n = Resources.Views.Account.ViewTranslation
@{
    ViewBag.Title = i18n.SendCodeTitle;
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>@i18n.SendCodeSubTitle</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            @i18n.SendCodeInfoText :
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="@i18n.SubmitButtonText" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
